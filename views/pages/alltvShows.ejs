<%- include('../partials/header', { currentPage: 'shows' }) %>

<main class="main" id="main">
    <!-- Optional: Add a class here if you want to style the overall grid/layout of the list -->
    <div> 
        <div class ="program-grid-container">   
        <% programData.forEach(program => { %>
            <div class="image-container"> 
                <figure>
                    <img src="<%= program.img_url %>" alt="Xmas movie or show image: <%= program.title %>">
                    <figcaption>
                        <a href="/program/<%= program.program_id %>">
                            <%= program.title %>
                        </a>
                    </figcaption>
                </figure>
            </div> 
   <% }) %>
</div>
</main>

<%- include('../partials/footer')%>
