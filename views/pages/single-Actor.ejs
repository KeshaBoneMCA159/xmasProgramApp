<%- include('../partials/header') %>

<main class="main" id="main">
  <div class="program-card">

    <h1><%= actor.fName %> <%= actor.lName %></h1>

    <% if (actor.img_url) { %>
      <img class="program-image" src="/images/<%= actor.img_url %>" alt="<%= actor.fName %> <%= actor.lName %>">
    <% } %>

    <h2>Programs</h2>

    <% if (programs && programs.length) { %>
      <ul>
        <% programs.forEach(p => { %>
          <li>
            <a href="/program/<%= p.program_id %>">
              <%= p.title %><% if (p.yr_released) { %> (<%= p.yr_released %>)<% } %>
            </a>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No programs found for this actor.</p>
    <% } %>

  </div>
</main>

<%- include('../partials/footer') %>
